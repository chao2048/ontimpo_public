<body>
    <div class="logo">
    </div>
    <div class="slogan">
        <h2>WELCOME!</h2>
        <br>
        <h3>
        Worried about missing you deadline?<br>
        Worry No More!<br>
        Try out this personal Time Management<br>
        App now!
        </h3>
    </div>
     <div class="loginbox">
    <h1>Sign In</h1>
    <%= form_with model: @user, url: sign_in_path do |form| %>
        <div class="mb-3">
            <%= form.label :email %>
            <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
        </div>
        <div class="mb-3">
            <%= form.label :password %>
            <%= form.password_field :password, class: "form-control", placeholder: "Enter Password" %>
            <br>
            <%= link_to "Forgot your password?", password_reset_path %>
        </div>
        <div class="mb-3">
            <%= form.submit "Sign In", class: "btn btn-primary", data: {turbo: false} %>
        </div>
    <% end %>

        <div class="mb-3">
        OR <br>
        <%= button_to '/auth/google_oauth2' do%>
          <%= image_tag 'google_logo.png' %>
        <% end %>
        </div>

    </div>
</body>